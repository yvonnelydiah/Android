        android:hint="Enter Email"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="525dp" />

    <EditText
        android:id="@+id/editTextTextPassword5"
        android:layout_width="383dp"
